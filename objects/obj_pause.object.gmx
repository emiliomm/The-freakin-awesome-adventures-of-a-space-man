if (keyboard_check_pressed(vk_escape))
{
    if (!pause &amp;&amp; room_get_name(room) != "rm_menu" &amp;&amp; room_get_name(room) != "rm_menu2" &amp;&amp; room_get_name(room) != "rm_credits" &amp;&amp; room_get_name(room) != "rm_muerte" &amp;&amp; room_get_name(room) != "rm_intro" &amp;&amp; room_get_name(room) != "rm_nv") //Activamos la pausa si no estamos en los menús y no está ya activada
    {
        pause = 1;
        instance_deactivate_all(true); //Desactiva todo menos él mismo
        tile_layer_hide(1000000); //Oculta los tile
    }
    else
    {
        pause = 0;
        instance_activate_all();
        tile_layer_show(1000000);
    }
}

if (keyboard_check_pressed(ord("N")))
{
    if (pause == 1) //Si pulsamos m vamos al menú principal
    {
        room_goto(rm_inicializar);
            
        pause = 0;
        instance_activate_all();
    }
}

if (keyboard_check_pressed(ord("M")))
{
    if (pause == 1 &amp;&amp; room_get_name(room) != "rm_mapamundi") //Si pulsamos m vamos al menú principal
    {
        room_goto(rm_mapamundi);
            
        pause = 0;
        instance_activate_all();
    }
}
